<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Citi Bank</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="body ">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  box-shadow mb-3 justify-content-between">
            <div class="container">
                <a class="text1 text-light text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Citi Bank</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
            </div>
              <form class="form-inline navbar-collapse collapse">
                   
                    <button class="btn btne  btns  btn1 my-2 my-sm-0 text-light bg-primary" asp-action="Login" asp-controller="User">sign in</button>
                    <button   class="btn btne2 bg-danger  btns my-2 my-sm-0 text-light" asp-action="Signup" asp-controller="User">sign up</button>
                </form>
        </nav>
    </header>
    <div class="container divimage">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
