@{
    ViewData["Title"] = "Login";
     Layout="_LayoutHome";
}
@model BankApp.Models.LoginModel;

<div class="wrapper">
        <div class="logo">
            <img src="../images/user.png" alt="">
        </div>
        <div class="text-center mt-4 name">
            Citi Bank
        </div>
         <p class="text-danger text-center">@ViewData["error"]</p>
        <form asp-action="Login" asp-controller="User" class=" mt-3" >
            <div class="form-field d-flex align-items-center">
                <span class="far fa-user"></span>
                <input asp-for="Email"  placeholder="Email">
               
            </div>
           
            <div class="form-field d-flex align-items-center">
                <span class="fas fa-key"></span>
                <input asp-for="Password" type="password"  placeholder="Mot de passe">
            </div>
            <button asp-action="Login" asp-controller="User" class="btn mt-3" >Se connecter</button>
        </form>
        <div class="text-center fs-6">
            <a asp-action="AdminHome" asp-controller="Admin">Mot de passe oublier?</a>  <a asp-action="Signup" asp-controller="User">Inscrivez-vous</a>
        </div>
    </div>
<script>
        localStorage.clear();
        localStorage.setItem("userid", ViewBag.Id); // Exemple:stocker l'id de l'utilisateur
    console.log(@ViewBag.Id)
</script>