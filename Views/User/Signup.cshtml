@{
    ViewData["Title"] = "Signup";
     Layout="_LayoutHome";
}
@model BankApp.Models.User;
<div class="wrapper registerform">
        <div class="logo">
            <img src="../images/user.png" alt="">
        </div>
        <div class="text-center mt-4 name">
            Citi Bank
        </div>
        <form asp-action="signup" asp-controller="User" class="p-3 mt-3" >
            <div class="form-field d-flex align-items-center">
                <span class="far fa-user"></span>
                <input asp-for="Email"  placeholder="Email">
            </div>
            <div class="form-field d-flex align-items-center">
                <span class="fas fa-key"></span>
                <input asp-for="UserName" placeholder="Username">
            </div>
            <div class="form-field d-flex align-items-center">
                <span class="fas fa-key"></span>
                <input asp-for="Telephone" placeholder="Telephone">
            </div>
            <div class="form-field d-flex align-items-center">
                <span class="fas fa-key"></span>
                <input asp-for="Password" placeholder="Password">
            </div>
            <div class="form-field d-flex align-items-center">
                <span class="fas fa-key"></span>
                <input asp-for="Confirmpassword" placeholder="Confirm Password">
            </div>
            <button asp-action="Signup" asp-controller="User" class="btn mt-3" >Sign up</button>
        </form>
        <div class="text-center fs-6">
            <a href="">You have account?</a> or <a asp-action="Login" asp-controller="User">Login</a>
        </div>
</div>