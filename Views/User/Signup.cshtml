@{
    ViewData["Title"] = "Signup";
     Layout="_LayoutHome";
}
@model BankApp.Models.User;

<div class="wrapper registerform">
        <div class="logo">
            <img src="../images/user.png" alt="">
        </div>
        <div class="text-center mt-4 name">
            Citi Bank
        </div>
       <p class="text-danger text-center">@ViewData["error"]</p>
